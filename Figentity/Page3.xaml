<Page x:Class="Figentity.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Figentity"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <Grid>
        <DataGrid x:Name="ThirdGrid" IsReadOnly="True" SelectionChanged="ThirdGrid_SelectionChanged"/>
        <StackPanel VerticalAlignment="Bottom" Margin="30">
            <TextBox x:Name="classDate" Margin="5" Text="Дата"/>
            <TextBox x:Name="MemberId" Margin="5" Text="Участник"/>
            <TextBox x:Name="TrainerId" Margin="5" Text="Дата"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Добавить" Margin="5" Click="Insert_Click"/>
            <Button Content="Изменить" Margin="5" Click="Update_Click"/>
            <Button Content="Удалить" Margin="5" Click="Delete_Click"/>
        </StackPanel>

    </Grid>
</Page>
