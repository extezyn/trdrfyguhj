<Window x:Class="Figentity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Figentity"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Открыть 1 страницу" Click="Button_Click" />
        <Button Grid.Column="1" Content="Открыть 2 страницу" Click="Button_Click_1"/>
        <Button Grid.Column="2" Content="Открыть 3 страницу" Click="Button_Click_2" />
        <Frame x:Name="PageFrame"  Grid.Row="1" Grid.ColumnSpan="4"  NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
